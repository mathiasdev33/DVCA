<!DOCTYPE html>
<html lang="fr">
<head>
    <title>Administration</title>
    <link rel="stylesheet" href="{{ asset('assets/css/admin/meli/meli-admin-styles.css') }}">
    <link rel="stylesheet"  href="{{ asset('assets/css/admin/style.css') }}">
    {% block link %}{% endblock %}
</head>
<body>

<header>
    <!-- MENU BURGER -->

    <div class="meli-admin-header-menu-burger" onclick="meliAdminMenuBurger('#meli-admin-menu-burger');">
        <span></span>
        <span></span>
        <span></span>
    </div>

    <!-- END - MENU BUGER -->

    <div class="meli-admin-header-h1">
        <h1>Administration du site</h1>
    </div>
</header>

<main>

    <aside id="meli-admin-menu-burger">
        <nav>
            <ul>
                {% include "admin/_aside.html.twig" %}
            </ul>
        </nav>
    </aside>



    <section class="meli-admin-container">

        {% for message in app.flashes('success') %}
            <div class="meli-flash-message-success">
                <p class="meli-flash-p">{{ message }}</p>
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="meli-flash-message-error">
                <p class="meli-flash-p">{{ message }}</p>
            </div>
        {% endfor %}
        {% block content %}{% endblock %}



    </section>


</main>

<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

<script type="text/javascript" src="{{ asset('assets/css/admin/meli/meli-admin-script.js') }}"></script>
{% block script %}{% endblock %}
</body>
</html>