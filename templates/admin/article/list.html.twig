{% extends 'admin/_base.html.twig' %}

{% block content %}
 <section class="admin-list">
     <h2>Vous avez {{ articles | length }} articles dans votre base de donn√©e</h2>
     <div class="btn-top">
         <p><a href="{{ path('admin_article_insert') }}">Ajouter</a></p>
     </div>

     <table class="meli-admin-table">
         <tr>
             <th>Titre</th>
             <th>Categorie</th>
             <th>date</th>
             <th>Publier</th>
             <th class="meli-admin-th-actions">Action</th>
         </tr>


         {% for article in articles %}
             <tr>
                 <td rowspan="2">{{ article.title }}</td>
                 <td rowspan="2">{{ article.categorie.title }}</td>
                 <td rowspan="2">{{ article.date | date ('d-m-y') }}</td>
                 <td rowspan="2">{{ article.published }}</td>
                <tr>
                 <td><a href="{{ path('admin_article_show', {'id': article.id}) }}">Voir</a></td>
                </tr>
             </tr>
         {% endfor %}
     </table>
 </section>


{% endblock %}