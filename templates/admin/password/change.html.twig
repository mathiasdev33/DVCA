{% extends "admin/_base.html.twig" %}

{% block script %}
    <script type="text/javascript" src="{{ asset('assets/js/admin/password.js') }}"></script>
{% endblock %}

{% block content %}

    <h1>Changer le mot de passe</h1>

    <div class="meli-admin-div">
        <a href="{{ path('admin_home') }}">Retour</a>
    </div>


    <form action="#" method="POST" id="js-password-form">
        <div id="js-errors">

        </div>
        <div class="meli-admin-form-row">
            <label for="password" class="meli-admin-form-label">Nouveau mot de passe*</label>
            <input type="password" id="password" name="password" class="meli-admin-form-field" required>
        </div>

        <div class="meli-admin-form-row">
            <label for="password2" class="meli-admin-form-label">Confirmation du mot de passe*</label>
            <input type="password" id="password2" name="password2" class="meli-admin-form-field" required>
        </div>

        <div>
            <button type="button" class="meli-admin-form-btn-btn"
                    id="js-password-btn-show">Voir les mots de passe</button>
        </div>

        <div class="meli-admin-form-submit">
            <button class="meli-admin-form-submit-btn">Enregistrer</button>
        </div>

        <p>*champs obligatoires</p>
    </form>


{% endblock %}